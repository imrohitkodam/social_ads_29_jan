<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="COM_SOCIALADS_FORM_LBL_CAMPAIGN_ID" readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" filter="INTEGER"/>
		<field name="user_id" type="text" class="form-control" label="COM_SOCIALADS_FORM_LBL_CAMPAIGN_USER_ID" description="COM_SOCIALADS_FORM_DESC_CAMPAIGN_USER_ID" filter="INTEGER"/>
		<field name="created_by" type="createdby" default="" label="COM_SOCIALADS_FORM_LBL_CAMPAIGN_CREATED_BY" description="COM_SOCIALADS_FORM_DESC_CAMPAIGN_CREATED_BY" filter="INTEGER"/>
		<field name="campaign" type="text" class="form-control" required="true" label="COM_SOCIALADS_FORM_LBL_CAMPAIGN_CAMPAIGN" description="COM_SOCIALADS_FORM_DESC_CAMPAIGN_CAMPAIGN" filter="STRING"/>
		<field name="daily_budget" type="text" class="alphaCheck form-control validate validate-numeric" required="true" label="COM_SOCIALADS_FORM_LBL_CAMPAIGN_DAILY_BUDGET" description="COM_SOCIALADS_FORM_DESC_CAMPAIGN_DAILY_BUDGET" filter="STRING" />
		<field name="camp_published" type="text" class="form-control" label="COM_SOCIALADS_FORM_LBL_CAMPAIGN_CAMP_PUBLISHED" description="COM_SOCIALADS_FORM_DESC_CAMPAIGN_CAMP_PUBLISHED" filter=""/>
		<field name="state" type="radio" label="JSTATUS" required="true" description="JFIELD_PUBLISHED_DESC" class="btn-group" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
		<field name="start_date" type="calendar" class="inputbox" label="COM_SOCIALADS_FORM_LBL_CAMPAIGN_START_DATE" description="COM_SOCIALADS_FORM_LBL_CAMPAIGN_START_DATE_DESC" format="%Y-%m-%d" filter="USER_UTC" hint = "YYYY-MM-DD"/>
		<field name="end_date" type="calendar" class="inputbox" label="COM_SOCIALADS_FORM_LBL_CAMPAIGN_END_DATE" description="COM_SOCIALADS_FORM_LBL_CAMPAIGN_END_DATE_DESC" format="%Y-%m-%d" filter="USER_UTC" hint = "YYYY-MM-DD"/>
	</fieldset>
</form>
