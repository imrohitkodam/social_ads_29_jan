					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<!--Campaign actions-->
				<field name="logActionForCreateCampaign" type="radio" label="PLG_ACTIONLOG_SOCIALADS_CREATE_CAMPAIGN_LOG_ACTION_LBL" description="PLG_ACTIONLOG_SOCIALADS_COMMON_LOG_ACTION_DESC" default="0" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="logActionForDeleteCampaign" type="radio" label="PLG_ACTIONLOG_SOCIALADS_DELETE_CAMPAIGN_LOG_ACTION_LBL" description="PLG_ACTIONLOG_SOCIALADS_COMMON_LOG_ACTION_DESC" default="0" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
