				<field name="logActionForOrder" type="radio" label="PLG_ACTIONLOG_SOCIALADS_ORDER_LOG_ACTION_LBL" description="PLG_ACTIONLOG_SOCIALADS_COMMON_LOG_ACTION_DESC" default="1" class="btn-group btn-group-yesno">
