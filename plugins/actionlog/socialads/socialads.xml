					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<!--Coupon actions-->
				<field name="logActionForCreateCoupon" type="radio" label="PLG_ACTIONLOG_SOCIALADS_CREATE_COUPON_LOG_ACTION_LBL" description="PLG_ACTIONLOG_SOCIALADS_COMMON_LOG_ACTION_DESC" default="0" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="logActionForDeleteCoupon" type="radio" label="PLG_ACTIONLOG_SOCIALADS_DELETE_COUPON_LOG_ACTION_LBL" description="PLG_ACTIONLOG_SOCIALADS_COMMON_LOG_ACTION_DESC" default="0" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
