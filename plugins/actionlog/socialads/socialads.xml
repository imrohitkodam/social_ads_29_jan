	<authorUrl>https://techjoomla.com</authorUrl>
	<version>5.0.2</version>
	<description>PLG_ACTIONLOG_SOCIALADS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="socialads">socialads.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_actionlog_socialads.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_actionlog_socialads.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<!--Ad actions-->
				<field name="logActionForCreateAd" type="radio" label="PLG_ACTIONLOG_SOCIALADS_CREATE_AD_LOG_ACTION_LBL" description="PLG_ACTIONLOG_SOCIALADS_COMMON_LOG_ACTION_DESC" default="1" class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="logActionForDeleteAd" type="radio" label="PLG_ACTIONLOG_SOCIALADS_DELETE_AD_LOG_ACTION_LBL" description="PLG_ACTIONLOG_SOCIALADS_COMMON_LOG_ACTION_DESC" default="0" class="btn-group btn-group-yesno">
