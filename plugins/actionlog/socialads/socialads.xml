				<field name="logActionForChangeStateAd" type="radio" label="PLG_ACTIONLOG_SOCIALADS_STATE_CHANGE_AD_LOG_ACTION_LBL" description="PLG_ACTIONLOG_SOCIALADS_COMMON_LOG_ACTION_DESC" default="0" class="btn-group btn-group-yesno">
