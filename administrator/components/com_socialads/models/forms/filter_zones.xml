<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="JSEARCH_FILTER"
			description="JSEARCH_FILTER"
			hint="COM_SOCIALADS_ZONES_FILTER_SEARCH"/>
		<field
			name="state"
			type="list"
			label="state"
			description="JOPTION_SELECT_PUBLISHED"
			onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_QUICK2CART_LIST_LIMIT"
			description="COM_QUICK2CART_LIST_LIMIT_DESC"
			onchange="this.form.submit();"/>
	</fields>
</form>
